.drawer-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 100;
}

/* 底部弹出 */
.drawer-container.bottom {
  transition: height 1ms;
  bottom: 0;
}

.drawer-container.bottom.drawer-close {
  transition-delay: 600ms;
  height: 0;
}

.drawer-container.bottom.drawer-open {
  height: 100%;
}

/* 右边弹出 */
.drawer-container.right {
  transition: width 1ms;
  top: 0;
  right: 0;
}

.drawer-container.right.drawer-close {
  transition-delay: 600ms;
  width: 0;
}

.drawer-container.right.drawer-open {
  width: 100%;
}

/* 蒙层 */
.drawer-mask {
  background-color: rgba(0, 0, 0, 0.3);
  transition: opacity 600ms;
  width: 100%;
  height: 100%;
}

/* 关闭蒙层 */
.drawer-close > .drawer-mask {
  opacity: 0;
}

/* 打开蒙层 */
.drawer-open > .drawer-mask {
  opacity: 1;
}

/* 内容 */
.drawer-content {
  background-color: white;
  transition: transform 300ms, opacity 600ms;
  padding: 20px;
  position: absolute;
}

/* 内容底部弹出 */
.bottom > .drawer-content {
  max-height: 80vh;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  top: auto;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 内容右边弹出 */
.right > .drawer-content {
  width: 400px;
  border-bottom-left-radius: 15px;
  border-top-left-radius: 15px;
  left: auto;
  top: 0;
  right: 0;
  bottom: 0;
}

/* 关闭内容 */
.bottom.drawer-close .drawer-content {
  opacity: 0;
  transform: translateY(100%);
}

.right.drawer-close .drawer-content {
  opacity: 0;
  transform: translateX(100%);
}

/* 打开内容 */
.bottom.drawer-open .drawer-content {
  opacity: 1;
  transform: translateY(0);
}

.right.drawer-open .drawer-content {
  opacity: 1;
  transform: translateX(0);
}

/* 关闭按钮 */
.close-container {
  display: flex;
  align-items: center;
  margin-bottom: 0.5em;
}

.bottom .close-container {
  justify-content: flex-end;
}

.right .close-container {
  justify-content: flex-start;
}
